<div class="row">
  <div class="small-12 large-12 columns">
    <h2><%= page_title %></h2>
    <hr />

    <table style="width: 100%;">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Telephone</th>
          <th>Memo</th>
          <th colspan="2"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.first_name %></td>
            <td><%= contact.last_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.telephone %></td>
            <td><%= contact.memo %></td>
            <td><%= link_to 'Edit', edit_admin_contact_path(contact) %></td>
            <td><%= link_to 'Delete', admin_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br />
    
    <%= link_to 'New Message', new_admin_contact_path, class:"button" %>
  </div>
</div>